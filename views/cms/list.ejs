<%- include('../partials/head', { title: 'إدارة المحتوى (الصفحات الثابتة)' }) %>
  <%- include('../partials/sidebar', { adminUsername }) %>

    <div class="container-fluid py-4 px-4">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h4 class="fw-bold m-0 text-dark">إدارة المحتوى (CMS)</h4>
          <p class="text-muted small mb-0">تحكم بالصفحات الثابتة لتطبيق المتجر مثل من نحن، الخصوصية، والشروط</p>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="row g-4 mb-4">
        <div class="col-md-3">
          <div class="card border-0 shadow-sm h-100 p-3">
            <div class="d-flex align-items-center gap-3">
              <div
                class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                style="width: 48px; height: 48px;">
                <i class="bi bi-file-earmark-text-fill fs-4"></i>
              </div>
              <div>
                <small class="text-muted d-block">إجمالي الصفحات</small>
                <h4 class="fw-bold m-0">
                  <%= stats.totalPages %>
                </h4>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card border-0 shadow-sm h-100 p-3 border-start border-success border-4">
            <div class="d-flex align-items-center gap-3">
              <div
                class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center"
                style="width: 48px; height: 48px;">
                <i class="bi bi-check-circle-fill fs-4"></i>
              </div>
              <div>
                <small class="text-muted d-block">مضافة / معدلة</small>
                <h4 class="fw-bold m-0 text-success">
                  <%= stats.updatedPages %>
                </h4>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card border-0 shadow-sm h-100 p-3 border-start border-warning border-4">
            <div class="d-flex align-items-center gap-3">
              <div
                class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center"
                style="width: 48px; height: 48px;">
                <i class="bi bi-hourglass-split fs-4"></i>
              </div>
              <div>
                <small class="text-muted d-block">بانتظار الإضافة</small>
                <h4 class="fw-bold m-0 text-warning">
                  <%= stats.totalPages - stats.updatedPages %>
                </h4>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Pages Grid/Table -->
      <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white py-3 border-0 d-flex align-items-center justify-content-between">
          <h5 class="fw-bold m-0"><i class="bi bi-journal-richtext ms-2 text-primary"></i>الصفحات الأساسية</h5>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="bg-light bg-opacity-50">
              <tr>
                <th class="ps-4">اسم الصفحة</th>
                <th class="text-center">حالة المحتوى</th>
                <th class="text-center">آخر تحديث</th>
                <th class="text-end pe-4">الإجراءات</th>
              </tr>
            </thead>
            <tbody>
              <% pages.forEach(function(p) { %>
                <tr>
                  <td class="ps-4">
                    <div class="d-flex align-items-center gap-3">
                      <div class="bg-light rounded p-2 text-primary">
                        <i class="bi bi-file-text fs-5"></i>
                      </div>
                      <div class="d-flex flex-column">
                        <span class="fw-bold text-dark">
                          <%= p.title_ar %>
                        </span>
                        <small class="text-muted">
                          <%= p.title_en || '—' %>
                        </small>
                      </div>
                    </div>
                  </td>
                  <td class="text-center">
                    <% if (p.updated_at) { %>
                      <span
                        class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3 py-1">
                        <i class="bi bi-check2-circle ms-1"></i> مضاف
                      </span>
                      <% } else { %>
                        <span
                          class="badge bg-warning bg-opacity-10 text-warning border border-warning rounded-pill px-3 py-1">
                          <i class="bi bi-exclamation-circle ms-1"></i> غير متوفر
                        </span>
                        <% } %>
                  </td>
                  <td class="text-center text-muted small">
                    <% if (p.updated_at) { %>
                      <div class="d-flex flex-column text-center">
                        <span class="text-dark">
                          <%= new Date(p.updated_at).toLocaleDateString('ar-EG', { year: 'numeric' , month: 'long' ,
                            day: 'numeric' }) %>
                        </span>
                        <span dir="ltr" class="text-muted small">
                          <%= new Date(p.updated_at).toLocaleTimeString('en-US', { hour: '2-digit' , minute: '2-digit'
                            }) %>
                        </span>
                      </div>
                      <% } else { %>
                        —
                        <% } %>
                  </td>
                  <td class="text-end pe-4">
                    <a href="/admin/cms/edit/<%= p.slug %>" class="btn btn-outline-primary btn-sm px-3 rounded-pill">
                      <i class="bi bi-pencil-square ms-1"></i> تحرير المحتوى
                    </a>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%- include('../partials/scripts') %>