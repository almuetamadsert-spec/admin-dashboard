<%- include('../partials/head', { title: 'إدارة التجار' }) %>
<%- include('../partials/sidebar', { adminUsername }) %>

<div class="main-content">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <div>
      <h4 class="page-title mb-1">إدارة التجار</h4>
      <p class="text-muted small mb-0">توجيه الطلبات والإشعارات حسب المدينة. لون البطاقة وحد الطلبات (منطق نظام المعتمد).</p>
    </div>
    <div class="d-flex gap-2">
      <a href="/admin/merchants/export" class="btn btn-outline-success"><i class="bi bi-download me-1"></i> تصدير CSV</a>
      <a href="/admin/merchants/stats" class="btn btn-outline-info"><i class="bi bi-graph-up me-1"></i> إحصائيات الأداء</a>
      <a href="/admin/merchants/new" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> إضافة تاجر جديد</a>
    </div>
  </div>
  <% if (typeof query !== 'undefined' && query.import === 'ok') { %>
  <div class="alert alert-success">تم استيراد التجار بنجاح. عدد: <%= query.count || 0 %>، تخطي: <%= query.skipped || 0 %>.</div>
  <% } %>
  <% if (typeof query !== 'undefined' && query.import === 'no_file') { %>
  <div class="alert alert-warning">لم يتم اختيار ملف للاستيراد.</div>
  <% } %>
  <form method="post" action="/admin/merchants/import" enctype="multipart/form-data" class="mb-3 d-flex align-items-end gap-2">
    <div><label class="form-label small">استيراد تجار (CSV)</label><input type="file" name="csv_file" class="form-control form-control-sm" accept=".csv" required></div>
    <button type="submit" class="btn btn-outline-primary btn-sm">استيراد</button>
  </form>

  <form method="get" action="/admin/merchants" class="mb-3">
    <div class="row g-2 align-items-end">
      <div class="col-sm-5">
        <label class="form-label small mb-1">بحث</label>
        <input type="text" name="q" value="<%= query.q || '' %>" class="form-control form-control-sm" placeholder="الاسم، المتجر، الإيميل، الهاتف...">
      </div>
      <div class="col-sm-3">
        <label class="form-label small mb-1">المدينة</label>
        <select name="city_id" class="form-select form-select-sm">
          <option value="">كل المدن</option>
          <% cities.forEach(c => { %>
          <option value="<%= c.id %>" <%= query.city_id == c.id ? 'selected' : '' %>><%= c.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="col-sm-2">
        <label class="form-label small mb-1">الحالة</label>
        <select name="status" class="form-select form-select-sm">
          <option value="">الكل</option>
          <option value="active" <%= query.status === 'active' ? 'selected' : '' %>>نشط</option>
          <option value="inactive" <%= query.status === 'inactive' ? 'selected' : '' %>>معطل</option>
        </select>
      </div>
      <div class="col-sm-2 d-flex gap-1">
        <button type="submit" class="btn btn-primary btn-sm w-100"><i class="bi bi-search me-1"></i>بحث</button>
        <a href="/admin/merchants" class="btn btn-outline-secondary btn-sm"><i class="bi bi-x-lg"></i></a>
      </div>
    </div>
  </form>

  <div class="card">
    <div class="card-header d-flex align-items-center">
      <i class="bi bi-people me-2"></i>
      قائمة التجار (<%= merchants.length %>)
    </div>
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>اسم المالك</th>
            <th>اسم المتجر</th>
            <th>المدينة</th>
            <th>الهاتف</th>
            <th>البريد</th>
            <th>لون البطاقة</th>
            <th>حد الطلبات</th>
            <th>الحالة</th>
            <th width="140"></th>
          </tr>
        </thead>
        <tbody>
          <% merchants.forEach(function(m) { %>
          <tr>
            <td><strong><%= m.name %></strong></td>
            <td><%= m.store_name || '—' %></td>
            <td><%= m.city_name || '—' %></td>
            <td><%= m.phone || '—' %></td>
            <td><%= m.email || '—' %></td>
            <td>
              <% if (m.card_color) { %>
              <span class="d-inline-block rounded" style="width:20px;height:20px;background:<%= m.card_color %>" title="<%= m.card_color %>"></span>
              <% } else { %>
              <span class="text-muted small">افتراضي</span>
              <% } %>
            </td>
            <td><%= m.order_limit != null ? m.order_limit : 20 %></td>
            <td>
              <% if (m.is_active) { %>
              <span class="badge bg-success">نشط</span>
              <% } else { %>
              <span class="badge bg-secondary">معطل</span>
              <% } %>
            </td>
            <td>
              <a href="/admin/merchants/edit/<%= m.id %>" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-pencil"></i>
              </a>
              <form action="/admin/merchants/delete/<%= m.id %>" method="post" class="d-inline" onsubmit="return confirm('حذف التاجر «<%= m.name %>»؟');">
                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
              </form>
            </td>
          </tr>
          <% }); %>
          <% if (!merchants.length) { %>
          <tr>
            <td colspan="9" class="text-center text-muted py-5">
              <i class="bi bi-people display-6 d-block mb-2"></i>
              لا يوجد تجار. <a href="/admin/merchants/new">إضافة تاجر جديد</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/scripts') %>
