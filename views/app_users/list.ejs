<%- include('../partials/head', { title: 'مستخدمو التطبيق' }) %>
  <%- include('../partials/sidebar', { adminUsername }) %>

    <div class="container-fluid py-4 px-4">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h4 class="fw-bold m-0 text-dark">مستخدمو التطبيق (حسابات الدخول)</h4>
          <p class="text-muted small mb-0">إدارة حسابات الدخول لتطبيق الهاتف للعملاء والتجار</p>
        </div>
        <div class="d-flex gap-2">
          <button type="button" class="btn btn-primary px-4" data-bs-toggle="collapse"
            data-bs-target="#addUserCollapse">
            <i class="bi bi-plus-lg ms-2"></i> إضافة مستخدم جديد
          </button>
        </div>
      </div>

      <!-- Error Messages -->
      <% if (locals.query && locals.query.error==='password_short' ) { %>
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center gap-2 mb-4">
          <i class="bi bi-shield-exclamation text-warning fs-5"></i> <span>كلمة المرور يجب أن تكون 4 أحرف على
            الأقل.</span>
        </div>
        <% } %>
          <% if (locals.query && locals.query.error==='email_exists' ) { %>
            <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center gap-2 mb-4">
              <i class="bi bi-envelope-exclamation text-danger fs-5"></i> <span>هذا البريد الإلكتروني مسجّل مسبقاً.
                استخدام بريد آخر.</span>
            </div>
            <% } %>

              <!-- Stats Cards -->
              <div class="row g-4 mb-4">
                <div class="col-md-4">
                  <div class="card border-0 shadow-sm h-100 p-3">
                    <div class="d-flex align-items-center gap-3">
                      <div
                        class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 56px; height: 56px;">
                        <i class="bi bi-people-fill fs-3"></i>
                      </div>
                      <div>
                        <small class="text-muted d-block mb-1">إجمالي الحسابات المسجلة</small>
                        <h3 class="fw-bold m-0">
                          <%= stats.total %>
                        </h3>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card border-0 shadow-sm h-100 p-3 border-start border-info border-4">
                    <div class="d-flex align-items-center gap-3">
                      <div
                        class="bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 56px; height: 56px;">
                        <i class="bi bi-person-badge-fill fs-3"></i>
                      </div>
                      <div>
                        <small class="text-muted d-block mb-1">حسابات العملاء</small>
                        <h3 class="fw-bold m-0 text-info">
                          <%= stats.customers %>
                        </h3>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card border-0 shadow-sm h-100 p-3 border-start border-warning border-4">
                    <div class="d-flex align-items-center gap-3">
                      <div
                        class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 56px; height: 56px;">
                        <i class="bi bi-shop fs-3"></i>
                      </div>
                      <div>
                        <small class="text-muted d-block mb-1">حسابات التجار المرتبطة</small>
                        <h3 class="fw-bold m-0 text-warning">
                          <%= stats.merchants %>
                        </h3>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Add User Collapse Section -->
              <div class="collapse mb-4" id="addUserCollapse">
                <div class="card border-0 shadow-sm border-start border-primary border-4">
                  <div class="card-body p-4">
                    <h6 class="fw-bold mb-4 text-dark"><i class="bi bi-person-plus ms-2 text-primary"></i>توليد حساب
                      دخول جديد</h6>
                    <form method="post" action="/admin/app-users" class="row g-3">
                      <div class="col-md-3">
                        <label class="form-label small text-muted fw-bold">البريد الإلكتروني *</label>
                        <div class="input-group">
                          <span class="input-group-text bg-light border-end-0"><i
                              class="bi bi-envelope text-muted"></i></span>
                          <input type="email" name="email" class="form-control border-start-0"
                            placeholder="user@example.com" required dir="ltr" style="text-align: right;">
                        </div>
                      </div>
                      <div class="col-md-2">
                        <label class="form-label small text-muted fw-bold">كلمة المرور *</label>
                        <div class="input-group">
                          <span class="input-group-text bg-light border-end-0"><i
                              class="bi bi-key text-muted"></i></span>
                          <input type="password" name="password" class="form-control border-start-0"
                            placeholder="4+ أحرف" minlength="4" required dir="ltr" style="text-align: right;">
                        </div>
                      </div>
                      <div class="col-md-2">
                        <label class="form-label small text-muted fw-bold">صلاحية الحساب</label>
                        <select name="role" class="form-select" id="appUserRole">
                          <option value="customer">عميل (مشتري)</option>
                          <option value="merchant">تاجر (لوحة التاجر)</option>
                        </select>
                      </div>
                      <div class="col-md-3" id="merchantSelectWrap" style="display:none;">
                        <label class="form-label small text-muted fw-bold">الربط بمتجر (للتجار فقط) *</label>
                        <select name="merchant_id" class="form-select border-warning">
                          <option value="">— يجب اختيار التاجر ليتم الربط —</option>
                          <% (merchants || []).forEach(function(m) { %>
                            <option value="<%= m.id %>">
                              <%= m.name %> — <%= m.store_name || '' %>
                            </option>
                            <% }); %>
                        </select>
                      </div>
                      <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 py-2"><i
                            class="bi bi-check2-circle ms-1"></i> حفظ وتفعيل</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Users Table -->
              <div class="card border-0 shadow-sm overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                  <h5 class="fw-bold m-0"><i class="bi bi-card-list ms-2 text-primary"></i>سجل مستخدمي التطبيق</h5>
                </div>

                <div class="table-responsive">
                  <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                      <tr>
                        <th class="ps-4">البريد الإلكتروني</th>
                        <th class="text-center">الرتبة</th>
                        <th>التاجر المرتبط (للتجار)</th>
                        <th class="text-center">تاريخ الإنشاء</th>
                        <th class="text-end pe-4">الإجراءات</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% (users || []).forEach(function(u) { %>
                        <tr>
                          <td class="ps-4">
                            <div class="d-flex align-items-center gap-3">
                              <div
                                class="bg-light rounded-circle d-flex align-items-center justify-content-center text-primary"
                                style="width: 40px; height: 40px;">
                                <i class="bi bi-person<%= u.role === 'merchant' ? '-badge' : '' %> fs-5"></i>
                              </div>
                              <span class="fw-bold text-dark font-monospace" dir="ltr">
                                <%= u.email %>
                              </span>
                            </div>
                          </td>
                          <td class="text-center">
                            <% if (u.role==='merchant' ) { %>
                              <span
                                class="badge bg-warning bg-opacity-10 text-warning border border-warning rounded-pill px-3 py-1 fw-normal">تاجر</span>
                              <% } else { %>
                                <span
                                  class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-3 py-1 fw-normal">عميل</span>
                                <% } %>
                          </td>
                          <td>
                            <% if (u.role==='merchant' && u.merchant_name) { %>
                              <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-shop text-muted"></i>
                                <span class="text-dark fw-bold">
                                  <%= u.store_name || u.merchant_name %>
                                </span>
                                <small class="text-muted ms-1">(<%= u.merchant_name %>)</small>
                              </div>
                              <% } else if (u.role==='merchant' ) { %>
                                <span class="text-danger small"><i class="bi bi-exclamation-triangle ms-1"></i> غير
                                  مرتبط بمتجر!</span>
                                <% } else { %>
                                  <span class="text-muted small">—</span>
                                  <% } %>
                          </td>
                          <td class="text-center text-muted small">
                            <% if (u.created_at) { %>
                              <div class="d-flex flex-column text-center">
                                <span class="text-dark">
                                  <%= new Date(u.created_at).toLocaleDateString('ar-EG', { year: 'numeric' ,
                                    month: 'short' , day: 'numeric' }) %>
                                </span>
                                <span dir="ltr" class="text-muted small" style="font-size: 0.75rem;">
                                  <%= new Date(u.created_at).toLocaleTimeString('en-US', { hour: '2-digit' ,
                                    minute: '2-digit' }) %>
                                </span>
                              </div>
                              <% } else { %>
                                —
                                <% } %>
                          </td>
                          <td class="text-end pe-4">
                            <div class="dropdown">
                              <button class="btn btn-light btn-sm rounded-circle shadow-sm border" type="button"
                                data-bs-toggle="dropdown" style="width: 32px; height: 32px; padding: 0;">
                                <i class="bi bi-three-dots-vertical"></i>
                              </button>
                              <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                <li>
                                  <a class="dropdown-item py-2" href="/admin/app-users/edit/<%= u.id %>">
                                    <i class="bi bi-pencil ms-2 text-primary"></i> تعديل واختيار التاجر
                                  </a>
                                </li>
                                <li>
                                  <hr class="dropdown-divider">
                                </li>
                                <li>
                                  <form action="/admin/app-users/delete/<%= u.id %>" method="POST"
                                    onsubmit="return confirm('حذف هذا الحساب نهائياً؟ سيؤدي ذلك لتسجيل الخروج الفوري للمستخدم ولن يتمكن من الدخول مجدداً.')">
                                    <button class="dropdown-item py-2 text-danger" type="submit">
                                      <i class="bi bi-trash ms-2"></i> حذف الحساب
                                    </button>
                                  </form>
                                </li>
                              </ul>
                            </div>
                          </td>
                        </tr>
                        <% }); %>
                          <% if (!users || users.length===0) { %>
                            <tr>
                              <td colspan="5" class="text-center py-5 text-muted opacity-50">
                                <i class="bi bi-people display-1 d-block mb-3"></i>
                                <h5>لا توجد حسابات مسجلة</h5>
                                <p class="small">أضف مستخدمين أو استخدم الحسابات الافتراضية للتجربة (customer@test.com /
                                  merchant@test.com)</p>
                              </td>
                            </tr>
                            <% } %>
                    </tbody>
                  </table>
                </div>
              </div>

              <!-- Pagination -->
              <% if (totalPages> 1) { %>
                <div class="d-flex justify-content-center mt-4">
                  <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm shadow-sm">
                      <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                        <a class="page-link px-3" href="?page=<%= page - 1 %>">السابق</a>
                      </li>
                      <% for (let i=1; i <=totalPages; i++) { %>
                        <li class="page-item <%= page === i ? 'active' : '' %>">
                          <a class="page-link" href="?page=<%= i %>">
                            <%= i %>
                          </a>
                        </li>
                        <% } %>
                          <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                            <a class="page-link px-3" href="?page=<%= page + 1 %>">التالي</a>
                          </li>
                    </ul>
                  </nav>
                </div>
                <% } %>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const roleSelect = document.getElementById('appUserRole');
        const merchantWrap = document.getElementById('merchantSelectWrap');
        const merchantSelect = merchantWrap.querySelector('select');

        function toggleMerchantRequired() {
          if (roleSelect.value === 'merchant') {
            merchantWrap.style.display = 'block';
            merchantSelect.setAttribute('required', 'required');
          } else {
            merchantWrap.style.display = 'none';
            merchantSelect.removeAttribute('required');
            merchantSelect.value = ''; // clear
          }
        }

        if (roleSelect && merchantWrap) {
          roleSelect.addEventListener('change', toggleMerchantRequired);
          toggleMerchantRequired(); // init
        }
      });
    </script>

    <%- include('../partials/scripts') %>